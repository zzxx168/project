
<script>
    $(".memberData").addClass("active");
</script>

@model List<project.Models.FoodUser>

<div class="menu-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <br />
                    <br />
                    <br />
                    <h2>會員資料</h2>
                </div>
            </div>
        </div>
        <div style="font-size:larger; color : green;" id="result">@TempData["Message"]</div>
        <div  class="row special-list">
            <form  method="post" action="~/home/memberData">
                @{
                    foreach (var item in @Model)
                    {
                        @*左邊會員註冊資料 *@
                        @* E-mail/帳號，從資料庫帶資料出來放在下面的input的value，我已經設定是不可修改 *@
                        <div class="col-md-6 col-sm-6 special-grid " style="position:center">
                            <div  class="member-login-info">
                                <label style="font-size:larger; color: black;">E-mail/帳號<span class="account-verification"></span></label>
                                <input type="text" id="Email" name="Email" value="@item.Email" readonly="readonly" required="" class="member-login-info-text" placeholder="電子信箱(EX.xxx@gmail.com)">
                            </div>

                            @* 會員姓名 *@
                        <div class="member-login-info">
                            <label style="font-size:larger; color: black;">姓名<span class="account-verification"></span></label>
                            <input type="text" id="UserName" name="UserName" value="@item.UserName" required="" class="member-login-info-text" placeholder="請輸入中文全名">
                        </div>

                            @* 手機號碼，從資料庫帶資料出來放在下面的input的value *@
                        <div class="member-login-info">
                            <label style="font-size:larger; color: black;">手機號碼<span class="account-verification"></span></label>
                            <input type="text" id="PhoneNum" name="PhoneNum" value="@item.PhoneNum" required="" pattern="[0-9]{10}" class="member-login-info-text onlyNumber" placeholder="號碼格式 - 0912345678">
                        </div>
                            @* 生日，從資料庫帶資料出來放在下面的input的value，我已經設定是不可修改 *@
                        <div class="member-login-info">
                            <label style="font-size:larger; color: black;">生日<span class="account-verification"></span></label>
                            <input type="text" id="BirthDate" name="BirthDate" value="@item.BirthDate.Value.ToString("yyyy/MM/dd")" readonly="readonly" required="" class="member-login-info-text onlyNumber" placeholder="生日格式（月/日）- 01/01">
                        </div>
                            @* 地址，從資料庫帶資料出來放在下面的input的value *@
                        <div class="member-login-info">
                            <label style="font-size:larger; color: black;">地址<span class="account-verification"></span></label>
                            <input type="text" id="Address" name="Address" value="@item.Address" required="" class="member-login-info-text" placeholder="地址格式 - 406台中市北屯區……">
                        </div>

                            @*確認修改按鈕 *@
                            <div class="member-login-info">
                                @* 按鈕按下去，把資料寫回資料庫 *@
                                <input class="btn btn-success" type="submit" name="send" required="" id="send" value="確認修改">
                                @* 按鈕按下去，畫面直掉跳到menu *@
                                <input class="btn btn-success" type="submit" name="send" required="" id="send" value="取消">
                            </div>
                            @*右邊放圖 *@
                            <div class="col-md-6 col-sm-3 special-grid " style="position:fixed">
                                <br />
                                <br />
                                <img style="display:block; width:250%; height:450%" class="img-responsive" src="~/images/上菜了2.jpg" alt="image" />
                            </div>
                        </div>
                    }
                }
            </form>
        </div>
    </div>
</div>
